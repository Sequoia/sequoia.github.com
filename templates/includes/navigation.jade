-
  menu = [
    { name : 'Home', url : '/' },
    { name : 'Projects', url : '/projects/' },
    { name : 'Contact', url : '/contact/' },
    { name : 'Hire', url : '/work/' }
  ]
  unused = [
    { name : 'Twitter', url : 'https://twitter.com/_sequoia' },
    { name : 'Github', url : 'https://github.com/Sequoia/' }
  ]
mixin menuitem(name, url)
  //- todo: set current item? just not enough menu items rn
  if '/' + slug + '/' == url
    li.current: span= name
  else
    li: a(href=url)= name

nav
  ul#nav
    each item in menu
      +menuitem(item.name, item.url)
      //- h1= slug
