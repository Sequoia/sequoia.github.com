extends ./layout.jade
block content
  form
    .row

      .six.columns
        label(for='EmailInput') Your email
        input#EmailInput.u-full-width(type='email', placeholder='test@mailbox.com')
      .six.columns
        label(for='RecipientInput') Reason for contacting
        select#RecipientInput.u-full-width
          option(value='Option 1') Questions
          option(value='Option 2') Admiration
          option(value='Option 3') Can I get your number?

    label(for='Message') Message
    textarea#Message.u-full-width(placeholder='Hi Dave â€¦')

    label.-send-yourself-copy
      input(type='checkbox')
      span.label-body Send a copy to yourself

    input.button-primary(type='submit', value='Submit')
  // Always wrap checkbox and radio inputs in a label and use a <span class="label-body"> inside of it
  // Note: The class .u-full-width is just a utility class shorthand for width: 100%
